@model List<BP2Project.Models.Schedule>

<head>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        html {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        body {
            width: 100%;
            height: 100%;
            font-family: 'Open Sans', sans-serif;
            background: url(https://static1.squarespace.com/static/5a82f1550abd04d826494bc8/t/5c643f3beb393118997dec73/1550073661422/background-lol.png?format=2500w);
            background-repeat: no-repeat;
            background-size: 1980px, 720px;
        }

        .btn-primary, .btn-primary:hover {
            text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
            color: #ffffff;
        }

            .btn-primary.active {
                color: rgba(255, 255, 255, 0.75);
            }

        .btn-primary {
            background-color: transparent;
            border: hidden;
        }

            .btn-primary:hover {
                filter: none;
                background-color: #166dd7;
            }

        .matchfilter {
            position: absolute;
            top: 50%;
            left: 50%;
            margin: -150px 0 0 -150px;
            width: 300px;
            height: 300px;
        }

        table {
            font-family: arial, sans-serif;
            width: 1500px;
            color: white;
            border-top: hidden;
            border-left: hidden;
            border-right: hidden;
            border-bottom: hidden;
        }

        td, th {
            text-align: left;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index","Admin")"><img style="width:40px;height:40px; margin-top:-12px;" src="https://eu.lolesports.com/darkroom/original/b496f5eaa42b6152b579a5c3e6edf5a3:b9ea0fa9ce55cde10d1eef7564ba4c3a/en-logo.png" /></a>

            </div>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="@Url.Action("ChangeStandings", "Admin")">
                        <span class="glyphicon glyphicon-calendar"></span>
                        ChangeStandings
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Schedule", "Admin")">
                        <span class="glyphicon glyphicon-calendar"></span>
                        Schedule
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Standings", "Admin")">
                        <span class="glyphicon glyphicon-stats"></span>
                        Standings
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Media", "Admin")">
                        <span class="glyphicon glyphicon-globe"></span>
                        Media
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Tickets", "Admin")">
                        <span class="glyphicon glyphicon-shopping-cart"></span>
                        Tickets
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("UserProfile", "Admin")">
                        <span class="glyphicon glyphicon-user"></span>
                        Profile
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Logout", "Admin")">
                        <span class="glyphicon glyphicon-log-out"></span>
                        Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <table>
        <tr>
            @foreach (var schedule in Model)
            {
                <th>
                    <h1>@schedule.Name</h1>
                </th>
            }
        </tr>
        <tr>
            @foreach (var schedule in Model)
            {
                <td>
                    <ol>
                        @foreach (var match in schedule.Matches)
                        {
                            <li>@match.MatchName | @match.StartTime.ToShortDateString() @match.StartTime.ToShortTimeString() |</li>
                        }
                    </ol>
                </td>
            }
        </tr>
    </table>
</body>